<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="The checkout page">

    <listeners>
        <listener class-name="qa.listeners.SuiteListener"/>
        <listener class-name="qa.listeners.ConfigurationListener"/>
        <listener class-name="qa.listeners.DataProviderListener"/>
        <listener class-name="qa.listeners.ExecutionListener"/>
        <listener class-name="qa.listeners.TestListener"/>
        <listener class-name="qa.listeners.RetryListener"/>
        <listener class-name="io.qase.testng.QaseListener"/>
    </listeners>

    <test name="Expanding and collapsing forms">
        <classes>
            <class name="tests.checkout.ExpandingAndCollapsingFormsTest"/>
        </classes>
    </test>

    <test name="Order comments text area">
        <classes>
            <class name="tests.checkout.OrderCommentsTextAreaTest"/>
        </classes>
    </test>

     <test name="Payment methods">
        <classes>
            <class name="tests.checkout.PaymentMethodsTest"/>
        </classes>
    </test>

</suite>
